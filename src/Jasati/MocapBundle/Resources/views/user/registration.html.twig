{% extends 'JasatiMocapBundle::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h3><i class="fa fa-user-plus"></i>&ensp;{{ 'lbl_user' | trans }}&ensp;<small>{{ 'lbl_registration' | trans }}</small></h3>
            </div>
        </div>
    </div>

    {% if app.session.flashBag.has('error') %}
        <div class="row">
            <div class="col-xs-6">
                <div id="notification" class="alert alert-danger">
                    <span class="glyphicon glyphicon-ban-circle"></span>&nbsp;&nbsp;
                    {% for msg in app.session.flashBag.get('error') %}
                        {{ msg | trans }}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-xs-6">
            <form class="form-horizontal" method="post" action="{{ path('user_register') }}">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-user-plus"></i>&ensp;{{ 'lbl_registration_desc' | trans }}
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="email" class="col-xs-3 control-label">{{ 'lbl_email' | trans}}</label>
                            <div class="col-xs-8">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <input type="email" class="form-control"
                                       id="email" name="email" maxlength="16" autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name" class="col-xs-3 control-label">{{ 'lbl_name' | trans}}</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="name" name="name" autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-xs-3 control-label">{{ 'lbl_password' | trans}}</label>
                            <div class="col-xs-8">
                                <input type="password" class="form-control"
                                       id="password" name="password" maxlength="32">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="captcha" class="col-xs-3 control-label">{{ 'lbl_captcha' | trans }}</label>
                            <div class="col-xs-4" style="padding-right: 0px">
                                <input type="text" class="form-control" name="captcha" maxlength="4">
                            </div>
                            <div class="col-xs-4">
                                <img src="{{ captcha.inline }}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-8">
                                <button id="view" class="btn btn-success" type="submit">
                                    <i class="fa fa-sign-in fa-lg"></i> &ensp;{{ 'lbl_register' | trans}}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}